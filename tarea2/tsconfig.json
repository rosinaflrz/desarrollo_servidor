{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "src/types"]  // Incluye la carpeta 'types'
    },
    "include": ["src/**/*", "src/types/**/*"]  // Incluye los archivos de la carpeta 'types'
  }
  